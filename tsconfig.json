{
  "compileOnSave": true,
  "compilerOptions": {
    "lib": [
      "es6",
      "es2015",
      "es2016",
      "es2017",
      "es2018"
    ],
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es2017",
    "sourceMap": false,
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
  },
  "include": [
    "src/**/*",
    "src/public/*.html"
  ],
  "exclude": [
    "node_modules","test/**"
  ]
}